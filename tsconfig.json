{
  "compilerOptions": {
    "target": "ES2020", // Puedes ajustar esto según tus necesidades
    "module": "commonjs",
    "outDir": "./out", // Carpeta de salida para los archivos compilados
    "rootDir": "./", // Carpeta raíz de tu proyecto
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true // No emitir archivos JS, ya que Playwright ejecuta TypeScript directamente
  },
  "include": ["**/*.ts"], // Incluir todos los archivos TypeScript
  "exclude": ["node_modules"] // Excluir la carpeta node_modules
}